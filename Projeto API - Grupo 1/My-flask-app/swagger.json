{
    "swagger": "2.0",
    "info": {
        "title": "My Flask App",
        "version": "1.0.0"
    },
    "paths": {
        "/funcionario": {
            "post": {
                "summary": "Create a new Funcionario",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Funcionario"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Funcionario created"
                    },
                    "400": {
                        "description": "Email already exists"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "summary": "Login Funcionario",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Login"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Login successful"
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        }
    },
    "definitions": {
        "Funcionario": {
            "type": "object",
            "properties": {
                "nome": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "senha": {
                    "type": "string"
                }
            }
        },
        "Login": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "senha": {
                    "type": "string"
                }
            }
        }
    }
}
